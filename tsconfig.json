{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist",
        "rootDir": "src",
        "noUnusedLocals": true,
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": ["**/__tests__", "dist"]
}
